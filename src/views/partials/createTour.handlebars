
<div class="create-rent-wrapper">
    <button class="create-btn">¿ Quieres publicar un tour? Haz click aqui</button>
</div>

<div class="modal" id="createRentModal">
    <div class="modal-content">
        <span class="close-btn">&times;</span>
        <h2 style="margin-bottom: 20px; text-align: center;">Crear una Aventura</h2>
        <form id="createRentForm" enctype="multipart/form-data">
            <label for="title">Título</label>
            <input type="text" id="title" name="title" placeholder="Ingresa el nombre del tour" required />

            <label for="description">Descripción</label>
            <textarea id="description" name="description" placeholder="Ingresa la descripción del tour" required></textarea>

            <label for="price">Precio</label>
            <input type="number" id="price" name="price" placeholder="Ingresa el precio del Tour" required />

            <label for="guideId">id guia</label>
            <input type="text" id="guideId" name="guideId" readonly required>

            <label for="location">Dirección</label>
            <input type="text" id="location" name="location" placeholder="Ingresa la ubicación del tour" required />

            <label for="category">Categoría</label>
            <input type="text" id="category" name="category" placeholder="Ingresa la categoria del tour" required />

            <label for="mainImg">Imagen principal</label>
            <input type="file" id="mainImg" name="mainImg" required />

            <label for="photos">Fotos adicionales</label>
            <div id="photo-inputs">
                <input type="file" name="photos" accept="image/*" class="gallery-input" />
            </div>
            <button type="button" id="add-image" class="add-image-btn">
                <i class="fas fa-plus"></i>
                Agregar otra imagen
            </button>

            <button type="submit" class="btn-creta-tour">Crear Aventura</button>
        </form>
    </div>
</div>

<script src="/js/createTourForm.js"></script>
