<link rel="stylesheet" href="/css/guideDetail.css">

<section class="mt-10">
    <div class="container">
        <div id="content" class="grid">
            <div class="profile">
                <div class="profile-header">
                    <figure class="profile-image">
                        <img src="{{guide.photo}}" alt="{{guide.name}}" class="image" />
                    </figure>
                    <div class="profile-info">
                        <span id="specialization" class="specialization">{{guide.specialization}}</span>
                        <h3 id="guide-name" class="doctor-name">{{guide.name}}</h3>
                        <h4 class="bio-title">Biografia:</h4>
                        <p id="bio" class="bio">{{guide.bio}}</p>
                        <div class="mt-3 contact-btn">
                            <a class="contact-doctor-link" target="_blank"
                                href="https://api.whatsapp.com/send?phone={{guide.phone}}">
                                <i class="ri-whatsapp-line"></i> Contactar via WhatsApp
                            </a>
                        </div>
                    </div>
                </div>
                <div class="tabs">
                    <button id="about-tab" class="tab"></button>
                </div>
                <div id="tab-content" class="tab-content">
                    <p class="info-title">
                        Acerca de <span class="info-name">{{guide.name}}</span>
                    </p>
                    <div class="info-container">
                        <p class="about">{{guide.about}}</p>
                        <div class="container-cards">
                            <div class="education-section">
                                <h3 class="section-title">Educaci√≥n</h3>
                                <ul class="education-list">
                                    {{#each guide.education}}
                                    <li class="education-item">
                                        <div>
                                            <span class="date">{{this.startingDate}} - {{this.endingDate}}</span>
                                            <span class="date">{{this.date}}</span>
                                            <p class="degree">{{this.degree}}</p>
                                        </div>
                                        <p class="university">{{this.university}}</p>
                                    </li>
                                    {{/each}}
                                </ul>
                            </div>
                            <div class="experience-section">
                                <h3 class="section-title">Experiencia</h3>
                                <ul class="experience-list">
                                    {{#each guide.experiences}}
                                    <li class="experience-item">
                                        <div>
                                            <span class="date">{{this.startingDate}} - {{this.endingDate}}</span>
                                            <p class="position">{{this.position}}</p>
                                        </div>
                                        <p class="hospital">{{this.hospital}}</p>
                                    </li>
                                    {{/each}}
                                </ul>
                            </div>
                            <div class="experience-section">
                                <h3 class="section-title">Servicios</h3>
                                <ul class="experience-list">
                                    {{#each guide.services}}
                                    <li class="experience-item">
                                        <div>
                                            <span class="date">{{this.title}}</span>
                                            <p class="position">{{this.description}}</p>
                                        </div>
                                    </li>
                                    {{/each}}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>