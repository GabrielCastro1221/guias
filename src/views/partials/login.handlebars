<link rel="stylesheet" href="/css/login.css">

<section class="body-login">
    <div class="wrapper">
        <form class="form">
            <h1>Inicio de Sesión</h1>
            <div class="input-box">
                <input type="text" name="email" placeholder="Ingrese su correo electronico" required>
                <i class="ri-user-line"></i>
            </div>
            <div class="input-box">
                <input type="password" name="password" placeholder="Ingrese la contraseña" required>
                <i class="ri-lock-line"></i>
            </div>
           
            <button type="submit" class="btn">Ingresar</button>
            <div class="register-link">
                <p>No tienes cuenta? <a href="/registro">Registrarse</a></p>
                <a href="/reset-password" class="forgot">Olvidaste tu contraseña</a>
            </div>
        </form>
    </div>
</section>

<script src="/js/login.js"></script>